{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2022",
    "lib": [
      "esnext"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "node_modules/.types",
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": [
      "ms",
      "node",
      "ssh2"
    ]
  }
}
