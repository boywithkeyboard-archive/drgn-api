{
  "name": "@drgn/api",
  "private": true,
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --platform=node --format=esm --external:./node_modules/* --outfile=dist/index.js",
    "build:watch": "esbuild src/index.ts --bundle --minify --watch --platform=node --format=esm --external:./node_modules/* --outfile=dist/index.js",
    "dev": "concurrently --kill-others \"npm run build:watch\" \"nodemon dist/index.js\"",
    "lint": "eslint src --ext .ts",
    "format": "eslint src --fix",
    "deploy": "node deploy.mjs",
    "types": "tsc -w"
  },
  "dependencies": {
    "@fastify/compress": "^5.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/helmet": "^8.1.0",
    "@fastify/jwt": "^5.0.1",
    "@fastify/rate-limit": "^6.0.1",
    "cachu": "^5.4.4",
    "dayjs": "^1.11.2",
    "discord.js": "^13.7.0",
    "dotenv": "^16.0.1",
    "fastify": "^3.29.0",
    "mongoose": "^6.3.5",
    "ms": "^2.1.3",
    "nanoid": "^3.3.4",
    "node-ssh": "^12.0.4",
    "nodemailer": "^6.7.5",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@types/ms": "^0.7.31",
    "@types/node": "^17.0.39",
    "@types/ssh2": "^0.5.52",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "concurrently": "^7.2.1",
    "esbuild": "^0.14.42",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "type": "module"
}
