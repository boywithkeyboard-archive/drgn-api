{
  "name": "@drgn/api",
  "private": true,
  "scripts": {
    "build": "esbuild src/index.ts --bundle --minify --platform=node --format=cjs --outfile=build/index.js",
    "build:watch": "esbuild src/index.ts --bundle --minify --watch --platform=node --format=cjs --outfile=build/index.js",
    "dev": "concurrently --kill-others \"npm run build:watch\" \"nodemon build/index.js\"",
    "deploy": "node deploy.mjs",
    "types": "tsc -w"
  },
  "dependencies": {
    "@fastify/compress": "^5.0.0",
    "@fastify/cookie": "^6.0.0",
    "@fastify/cors": "^7.0.0",
    "@fastify/helmet": "^8.0.0",
    "@fastify/jwt": "^5.0.1",
    "@fastify/oauth2": "^5.0.0",
    "@fastify/rate-limit": "^6.0.0",
    "cachu": "^5.4.4",
    "dayjs": "^1.11.2",
    "discord.js": "^13.6.0",
    "dotenv": "^16.0.0",
    "fastify": "^3.29.0",
    "mongoose": "^6.3.3",
    "nanoid": "^3.3.4",
    "node-fetch": "^2.6.7",
    "node-ssh": "^12.0.4"
  },
  "devDependencies": {
    "@types/node": "^17.0.32",
    "@types/ssh2": "^0.5.52",
    "concurrently": "^7.0.0",
    "esbuild": "^0.14.38",
    "nodemon": "^2.0.16",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  }
}
